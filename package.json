{
  "name": "vite-plugin-codeigniter",
  "description": "A vite plugin to configure CodeIgniter4 apps. To be used in conjunction with https://github.com/yassinedoghri/codeigniter-vite.",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/yassinedoghri/vite-plugin-codeigniter.git"
  },
  "author": {
    "name": "Yassine Doghri",
    "url": "https://yassinedoghri.com/"
  },
  "scripts": {
    "dev": "tsup-node --watch",
    "build": "tsc && tsup-node",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "commit": "cz",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "glob": "^11.0.1",
    "picocolors": "^1.1.1",
    "sharp": "^0.33.5",
    "vite-plugin-static-copy": "^2.2.0",
    "zod": "^3.24.2"
  },
  "peerDependencies": {
    "vite": "^6.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/git": "^10.0.1",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "prettier": "^3.5.2",
    "semantic-release": "^24.2.3",
    "tsup": "^8.4.0",
    "typescript": "~5.7.3",
    "vite": "6.2.0"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
